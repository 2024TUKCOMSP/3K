<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/send_text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/send_text_message"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-10dp"
            android:layout_marginEnd="15dp"
            android:gravity="right"
            android:text="타임스탬프"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/send_text_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="390dp"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="5dp"
            android:background="@drawable/right_bubble"
            android:text="메시지" />

        <TextView
            android:id="@+id/send_text_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_toLeftOf="@id/send_text_message"
            android:layout_alignBottom="@+id/send_text_message"
            android:layout_marginBottom="5dp"/>

    </RelativeLayout>
</LinearLayout>